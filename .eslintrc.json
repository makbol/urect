{
  "env": {
    "es6": true,
    "browser": true
  },
  "plugins": ["react"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "warn",
      "always"
    ],
    "no-console": "warn",
    "no-unused-vars": ["warn"],
    "arrow-parens": ["error", "as-needed"],
    "react/prop-types": "off"
  }
}
